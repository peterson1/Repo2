<UserControl x:Class="Repo2.Uploader.WPF45.UserControls.PackageCheckerUC1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repo2.Uploader.WPF45.UserControls"
             xmlns:sdk="clr-namespace:Repo2.SDK.WPF45.UserControls;assembly=Repo2.SDK.WPF45"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    >
            <sdk:DualText Text1="uploadable"
                          Text2="{Binding IsUploadable}"
                          />
            <TextBlock Text="verifying package file ..."
                       Visibility="{Binding IsUploadable, Converter={StaticResource visIfNull}}"
                       />
        </StackPanel>
        <TextBlock Text="{Binding ReasonWhyNot}"
                   Foreground="Red"
                   Visibility="{Binding IsUploadable, Converter={StaticResource visIfFalse}}"
                   HorizontalAlignment="Center"
                   />
    </StackPanel>
</UserControl>
