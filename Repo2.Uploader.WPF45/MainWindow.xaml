<Window x:Class="Repo2.Uploader.WPF45.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repo2.Uploader.WPF45"
        xmlns:sdk="clr-namespace:Repo2.SDK.WPF45.UserControls;assembly=Repo2.SDK.WPF45"
        xmlns:int="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:bhv="clr-namespace:Repo2.SDK.WPF45.ControlBehaviors.WindowBehaviors;assembly=Repo2.SDK.WPF45"
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <int:Interaction.Behaviors>
        <bhv:DraggableBehavior />
    </int:Interaction.Behaviors>
    <Grid>
        <StackPanel>
        
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding ConfigKeys}"
                          SelectedItem="{Binding ConfigKey}"
                          />
                <Button Command="{Binding FillConfigKeysCmd}"
                        Content="{Binding FillConfigKeysCmd.CurrentLabel}"
                        />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <sdk:DualText Text1="server"
                                  Text2="{Binding Config.BaseURL}"
                                  />
                    <sdk:DualText Text1="username"
                                  Text2="{Binding Config.Username}"
                                  />
                    <sdk:DualText Text1="password"
                                  Text2="{Binding Config.Password}"
                                  />
                    <sdk:DualText Text1="svr thumb"
                                  Text2="{Binding Config.CertificateThumb}"
                                  />
                    <sdk:DualText Text1="can write"
                                  Text2="{Binding CanWrite}"
                                  />
                </StackPanel>
                <Button Command="{Binding CheckCredentialsCmd}"
                        Content="{Binding CheckCredentialsCmd.CurrentLabel}"
                        />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBox Text="{Binding PackagePath, UpdateSourceTrigger=PropertyChanged}"
                             />
                    <sdk:DualText Text1="uploadable"
                                  Text2="{Binding IsUploadable}"
                                  />
                </StackPanel>
                <Button Command="{Binding CheckUploadabilityCmd}"
                        Content="{Binding CheckUploadabilityCmd.CurrentLabel}"
                        />
            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <xtk:DoubleUpDown Value="{Binding MaxPartSizeMB, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Command="{Binding UploadPackageCmd}"
                        Content="{Binding UploadPackageCmd.CurrentLabel}"
                        />
            </StackPanel>
        </StackPanel>

        <xtk:BusyIndicator IsBusy="{Binding UploadPackageCmd.IsBusy}"
                           BusyContent="{Binding UploaderStatus}"
                           />
    </Grid>
</Window>
